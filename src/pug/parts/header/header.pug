include head
body
    header.header 
        .top-line
            .container
                .contacts
                    .work-time
                        .icon-time
                            svg(xmlns="http://www.w3.org/2000/svg")
                                symbol(id="icon-clock" viewBox="0 0 24 24")
                                    circle(cx="12" cy="12" r="10")
                                    polyline(points="12 6 12 12 16 14")
                            svg.icon-clock
                                use(href="/img/icon-clock.svg")
                        .days Mon - Sun 09:00 - 21:00

                    .phone-box
                        svg(xmlns="http://www.w3.org/2000/svg")
                            symbol(id="icon-phone" viewBox="0 0 24 24")
                                path(d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z")
                        a.phone('tel:+1-2345-3455-33') +1-2345-3455-33

                    .email-box
                        svg(xmlns="http://www.w3.org/2000/svg")
                            symbol(id="icon-mail" viewBox="0 0 24 24")
                                path(d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z")
                                polyline(points="22,6 12,13 2,6")
                        a.email('mailto:contact@mediztheme.com') contact@mediztheme.com

                .socials 
                    a.icon.icon--fbk(href='#') 
                    a.icon.icon--lin(href='#') 
                    a.icon.icon--pin(href='#') 
                    a.icon.icon--twt(href='#') 
                    a.icon.icon--ins(href='#') 

        .middle-line
            .container
                a.logo(href='#')
                    img.logo-img(src='#' alt='#')

        .bottom-line
            .container
                ul.navigation 
                    li.nav-item
                        a.nav-link(href='#') Home
                    li.nav-item
                        a.nav-link(href='#') About us 
                    li.nav-item
                        a.nav-link(href='#') Services 
                    li.nav-item
                        a.nav-link(href='#') Doctors 
                    li.nav-item
                        a.nav-link(href='#') Contacts

                button.btn.btn--blue.js-callback Contact Now

                form.callback
                    input(type='hidden' value='header-callback')
                    p.callback-message Оставьте свои контактные данные, наш оператор перезвонит вам как только освободится
                    input(type='text' placeholder='Your name')
                    input(type='text' placeholder='Your phone')
                    input(type='submit' value='Send')